.title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 0;
}

.total-boost {
  left: 5;
  top: 30;
  font-size: 1.0;
}

.average-boosters {
  left: 5;
  top: 45;
  font-size: 0.8;
}

.container {
  top: 20;
  bottom: 20;
  left: 20;
  width: 75%;
  filter: blur(25);
  border-radius: 15 0 0 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
  box-shadow: none;
}

.side-container {
  top: 20;
  bottom: 20;
  right: 20;
  width: 18%;
  filter: blur(25);
  border-radius: 0 15 15 0;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
  box-shadow: none;
}

.booster-grid {
  left: 20;
  top: 50;
  width: 100%;
  padding-right: 10;
  height: fit-content;
  space-between-entries: 10;
  tiles-per-line: 5;
  tile-height: 70;

  Booster {
    border-radius: 5;
    border-thickness: 2;
    border-color: rgba(255, 255, 85, 0.3);

    .amount {
      left: 5;
      top: 5;
    }

    .icon {
      alignment-x: center;
      alignment-y: center;
      top: 30;
      height: 32;
      width: 32;
    }

    .boost {
      alignment-x: center;
      bottom: 5;
    }

  }

}

Scroll {
   top: 10;
   left: 10;
   right: 0;
   height: 90%;

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

.sort-button {
  width: 50;
  height: 15;
  padding-left: 3;
  left: 10;
  padding-right: 3;
  top: 10;
}

.clear-button {
  bottom: 10;
  left: 10;
  height: 15;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
}

.export-button {
  bottom: 30;
  left: 10;
  height: 15;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
}