@import super();

.booster-title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
}

.booster-subTitle {
  alignment-x: center;
  top: 25;
  font-size: 1.2;
}

.booster-sort-button {
  width: fit-content;
  padding-left: 3;
  left: 20;
  padding-right: 3;
}

.booster-container {
  top: 40;
  bottom: 20;
  left: 20;
  right: 20;
  filter: blur(25);
  border-radius: 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
}

.booster-list {
  left: 20;
  top: 50;
}

.booster-author {
  right:20;
  bottom:2;
}

Scroll {
   top: 10;
   left: 10;
   width: 100%;
   height: 90%;

   .booster-entry {
     top: 30;
     left: 20;
     height: 15;
     width: 100%;
     tiles-per-line: 5;
     tile-height: 130;
   }

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

.exportBtn {
  bottom:10;
  right:40;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
}

.secretButton-button {
  bottom:0;
  left:0;
  width: 7;
  height: 7;
  opacity:0.2;
  border-radius:0.1;
}

.feedback-button {
  top:0;
  right:20;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
}