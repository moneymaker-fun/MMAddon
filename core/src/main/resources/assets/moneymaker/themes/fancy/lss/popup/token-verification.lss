
.discord-container {
    height: 180 !important;
}

.container {
  left: 50%;
  top: 50%;
  width: 310;
  height: 140;
  alignment-x: center;
  alignment-y: center;
  filter: blur(25);
  border-radius: 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);

  .header {
    width: 100%;
    height: 25;
    padding-left: 10;
    background-color: rgba(85, 255, 85, 0.5);
    border-radius: 15 15 0 0;

    .title {

    }

    .close-button {
      width: 8;
      height: 8;
      alignment: right;
      padding-right: 10;
      color: gray;

      &:hover {
        color: white;
      }
    }
  }

  .content {
    padding: 5;
    space-between-entries: 2;

    .info-server-response {
      alignment-x: center;
      font-size: 0.9;
      text-color: gray;
      padding-bottom: 5;
    }

    .info-server-wait {
      alignment-x: center;
      font-size: 0.9;
      text-color: gray;
      padding-bottom: 5;
    }

    .discord-invite-button {
      margin-top: 5;
    }

    .info-token-text {
      alignment-x: center;
      font-size: 0.8;
      text-color: gray;
      padding-bottom: 5;
    }

    .info-token {
      alignment-x: center;
      font-size: 0.8;
      text-color: gray;
      padding-bottom: 5;
    }

    .info-website-text {
      alignment-x: center;
      font-size: 0.8;
      text-color: gray;
      padding-bottom: 5;
    }

    .info-discord-text-1 {
      alignment-x: center;
      font-size: 0.8;
      text-color: gray;
      padding-top: 5;
      padding-bottom: 5;
    }

    .info-discord-text-2 {
      alignment-x: center;
      font-size: 0.8;
      text-color: gray;
      padding-bottom: 5;
    }

  }

  .footer {
    width: 100%;
    height: 30;
    padding-right: 2;
    background-color: rgba(10, 10, 10, 0.4);
    border-radius: 0 0 15 15;

    .window-close-info {
      padding-left: 5;
      text-color: gray;
      font-size: 0.8;
      alignment: center;
    }

  }

}

