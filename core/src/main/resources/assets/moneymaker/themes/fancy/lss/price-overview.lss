.title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 0;
}

.container {
  top: 20;
  bottom: 20;
  left: 20;
  right: 20;
  filter: blur(25);
  border-radius: 15 15 15 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
}

.gold-container {
  top: 10;
  bottom: 10;
  left: 10;
  width: 23%;
  filter: blur(25);
  border-radius: 5 5 5 5;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: rgba(255, 170, 0, 0.1);

  .gold-title {
    top: 5;
    alignment-x: center;
    text-color: gold;
  }

  .gold-unlock {
    top: 15;
    alignment-x: center;
    text-color: gold;
    font-size: 0.8;
  }

  .gold-scroll {
    top: 30;
    bottom: 10;
    left: 6;
    right: 6;

    .gold-list {
      width: 100%;
      height: 100%;
    }

    Scrollbar {
      top: 0;
      right: 0;
      height: 100%;
      width: 5;
    }

  }

}

.coal-container {
  top: 10;
  bottom: 10;
  left: 26%;
  width: 23%;
  filter: blur(25);
  border-radius: 5 5 5 5;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: rgba(0, 0, 0, 0.4);

  .coal-title {
    top: 5;
    alignment-x: center;
    text-color: gray;
  }

  .coal-unlock {
    top: 15;
    alignment-x: center;
    text-color: gray;
    font-size: 0.8;
  }

  .coal-scroll {
    top: 30;
    bottom: 10;
    left: 6;
    right: 6;

    .coal-list {
      width: 100%;
      height: 100%;

    }

    Scrollbar {
      top: 0;
      right: 0;
      height: 100%;
      width: 5;
    }

  }

}

@media screen and (max-width: 1080) {
  .gold-container Component,
  .iron-container Component,
  .coal-container Component,
  .lapis-container Component {
    font-size: 0.8;
  }
}
@media screen and (min-width: 1080) {
  .gold-container Component,
  .iron-container Component,
  .coal-container Component,
  .lapis-container Component {
    font-size: 1.1;
  }
}

