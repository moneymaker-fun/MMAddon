Scroll {
  ChatMessage {
    space-between-entries: 0;

    LabyConnectChatMessage {
      width: 90%;

      &.other {
        .message-header {
          .timestamp {
            margin-bottom: 2;
            alignment-x: left;
            alignment-y: bottom;
          }
        }

        .message-content {
          .component-message {
            border-radius: 0 5 5 5;
          }
        }
      }

      &.self {
        .message-header {
          .timestamp {
            margin-bottom: 2;
            alignment-x: right;
            alignment-y: bottom;
          }
        }

        .message-content {
          .component-message {
            padding: 2 3 2 2;
            border-radius: 5 0 5 5;
          }
        }
      }

      .dummy-avatar {
        padding: 0 2 0 2;
        alignment-y: center;
        width: 10;
        height: fit-content;

        .timestamp {
          text-color: rgba(150, 150, 150, 100);
          left: 0;
          top: 50%;
          margin-left: 0;
          margin-bottom: 0;
          alignment-x: left;
          alignment-y: center;

          font-size: 0.5;
        }
      }

      .flex {
        .message-header {
          space-between-entries: 0;

          .sender {
            margin-top: 1;
            font-weight: 175;
            font-size: 0.8;
          }

          .timestamp {
            text-color: rgb(150, 150, 150);
            font-size: 0.525;
          }
        }

        .message-content {
          .component-message {
            font-size: 0.8;
            background-color: rgba(0, 120, 215, 0.5);
          }

          URIAttachment {
            border-radius: 5 5 5 5;

            .attachment-content {
              .attachment-icon {
                border-radius: 5 0 0 5;
              }
            }
          }
        }
      }
    }
  }
}