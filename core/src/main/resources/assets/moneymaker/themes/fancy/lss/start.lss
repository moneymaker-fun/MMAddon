@import super();

.start-title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 0;
}

.start-container {
  top: 20;
  bottom: 20;
  left: 20;
  right: 20;
  filter: blur(25);
  border-radius: 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
}

.timer-container {
  top: 20;
  bottom: 20;
  width: 30%;
  right: 20;
  filter: blur(25);
  border-radius: 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
}

.timer-title {
  text-color: green;
  top: 5;
  right: 11%;
}

.timer-list {
  height: 100%;
  width: 100%;
  tile-height: 20;
  tiles-per-line: 1;
  top: 10;
  left: 10;
}

Scroll {
   top: 10;
   left: 10;
   width: 90%;
   height: 90%;

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

Timer {
  top: 0;
  left: 0;
  width: 100%;
  height: 20;

  .timer-name {
    padding-top: -2;
    left: 25;
  }

  .timer-cancel {
    height: 15;
    width: 20;
  }

}

.feedback-button {
  top:0;
  right:20;
  height: 20;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
}

.donate-btn {
  bottom: 10;
  left: 10;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
  height: 15;
  border-color: blue;
}

.discord-btn {
  bottom: 10;
  left: 50;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
  height: 15;
  border-color: #5865F2;
}

.break-goal-title {
  text-color: yellow;
  left: 30;
  top: 30;
}

.break-goal-switch {
  left: 30;
  top: 40;
  height: 14;
  width: 25;
}

.break-goal-input-title {
  left: 30;
  top: 60;
}

.break-goal-input {
  left: 30;
  top: 70;
  width: 60;
  submit-button: true;
}