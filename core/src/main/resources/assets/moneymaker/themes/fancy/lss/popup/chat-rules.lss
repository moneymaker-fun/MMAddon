
.container {
  left: 50%;
  top: 50%;
  width: 310;
  height: 250;
  alignment-x: center;
  alignment-y: center;
  filter: blur(25);
  border-radius: 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);

  .header {
    width: 100%;
    height: 25;
    padding-left: 5;
    background-color: rgba(170, 0, 0, 0.3);
    border-radius: 15 15 0 0;

    .title {

    }

    .close-button {
      width: 8;
      height: 8;
      alignment: right;
      padding-right: 5;
      color: gray;

      &:hover {
        color: white;
      }
    }
  }

  .scroll {

    Scrollbar {
      width: 5;
      height: 100%;
      margin-right: 5;
    }

    .content {
      padding: 5;
      space-between-entries: 2;

      .note {
        font-size: small;
        text-color: gray;
        padding-bottom: 5;
      }

      .title {
        font-size: medium;
        text-color: white;
      }

      .text {
        font-size: small;
        text-color: gray;
        padding-bottom: 5;
      }
    }
  }

  .footer {
    width: 100%;
    height: 30;
    padding-right: 2;
    background-color: rgba(10, 10, 10, 0.4);
    border-radius: 0 0 15 15;

    .version-info {
      padding-left: 5;
      text-color: gray;
      font-size: 0.5;
    }

    .accept-button {
      padding-left: 5;
      padding-right: 5;
      alignment: center;
    }
  }

}

