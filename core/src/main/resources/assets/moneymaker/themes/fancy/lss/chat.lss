@import super();

.chat-title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top:0;
}

.chat-reconnect-button {
  width: fit-content;
  top: 8;
  left: 95;
  padding: 1 5 1 5;
  height: 10;
  background-color: red !important;
  border-color: dark_red !important;
}

.chat-status {
  font-size: 0.8;
  top: 10;
  left: 20;
}

.chat-online-text {
  font-size: 0.8;
  top: 10;
  right: 12%;
}

Scroll {
   top: 10;
   left: 10;
   width: 100%;
   height: 90%;

   .online-entry {
     top: 30;
     left: 20;
     height: 15;
     width: 100%;
     tiles-per-line: 5;
     tile-height: 130;
   }

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

ChatMessage {
  width: 100%;
  height: 20;

  .chat-msg-time {

  }

  .chat-msg-icon {

  }

  .chat-msg-playerName {

  }

  .chat-msg-message {

  }

  .timer-name {
    padding-top: -2;
    left: 25;
  }

  .timer-cancel {
    height: 15;
    width: 20;
  }

}

.chat-container {
  top: 20;
  bottom: 50;
  left: 20;
  width: 68%;
  filter: blur(25);
  border-radius: 15 0 0 0;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
}

.online-container {
  top: 20;
  bottom: 50;
  width: 25%;
  right: 20;
  filter: blur(25);
  border-radius: 0 15 0 0;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
}

.input-container {
  bottom: 0;
  left: 20;
  right: 20;
  height: 40;
  filter: blur(25);
  border-radius: 0 0 15 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);

  .chat-input {
    bottom: 25%;
    left: 20;
    right: 20;

    .blocked {
      background-color: red;
    }

  }

  .chat-error {
    bottom: 25%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.5;
  }

  .chat-muted-title {
    bottom: 40%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.4;
  }

  .chat-muted-reason {
    bottom: 20%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.0;
  }

}
