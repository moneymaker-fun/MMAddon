//@import super();

.chat-title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top:0;
}

.chat-reconnect-button {
  width: fit-content;
  top: 8;
  left: 95;
  padding: 1 5 1 5;
  height: 10;
  background-color: red !important;
  border-color: dark_red !important;
}

.chat-status {
  font-size: 0.8;
  top: 10;
  left: 20;
}

.chat-online-text {
  font-size: 0.8;
  top: 10;
  right: 12%;
}

.chat-container {
  top: 20;
  bottom: 50;
  left: 20;
  width: 68%;
  filter: blur(25);
  border-radius: 15 0 0 0;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
  box-shadow: none;
}

.online-container {
  top: 20;
  bottom: 50;
  width: 25%;
  right: 20;
  filter: blur(25);
  border-radius: 0 15 0 0;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
  box-shadow: none;
}

.input-container {
  bottom: 0;
  left: 20;
  right: 20;
  height: 40;
  filter: blur(25);
  border-radius: 0 0 15 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);
  box-shadow: none;

  .chat-input {
    bottom: 25%;
    left: 20;
    right: 20;
    submit-button: true;
  }

  .chat-error {
    bottom: 25%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.5;
  }

  .chat-muted-title {
    bottom: 40%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.4;
  }

  .chat-muted-reason {
    bottom: 20%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.0;
  }

}

.online-scroll {
  top: 5;
  left: 5;
  width: 90%;
  height: 95%;

  .online-list {
    height: 100%;
    width: 100%;
  }

  .online-entry {
    top: 30;
    left: 20;
    height: 15;
    width: 100%;
  }

  Scrollbar {
    left: 0;
    top: 0;
    width: 5;
    height: 100%;
    margin-right: 5;
  }
}

.chat-scroll {
  top: 10;
  left: 10;
  right: 0;
  bottom: 5;

  Scrollbar {
    left: 0;
    top: 0;
    width: 5;
    height: 100%;
    margin-right: 5;
  }

  .chat-messages {
    space-between-entries: 5;
    width: 90%;
    height: 100%;

    ChatMessage {
      width: 90%;
      height: fit-content;
      padding-bottom: 5;

      .message-header {
        height: 10;

        .timestamp {
          margin: 0 0 1 0;
          alignment-x: right;
          alignment-y: bottom;
        }

        .message-id {
          text-color: rgb(150, 150, 150);
          font-size: 0.525;
          alignment-y: bottom;
          margin: 0 0 1 3;
        }

        .mute-button {
          height: 9;
          width: fit-content;
          padding: -1 2 0.5 1;
          margin: 2 0 0 5;

          .button-text {
            font-size: 0.6 !important;
            text-color: red !important;
          }

        }

        .report-button {
          height: 9;
          width: fit-content;
          padding: -1 2 0.5 1;
          margin: 2 0 0 5;

          .button-text {
            font-size: 0.6 !important;
            text-color: red !important;
          }

        }

        .delete-button {
          height: 9;
          width: fit-content;
          padding: 0 3 1 2;
          margin: 2 0 0 5;

          .button-icon {
            height: 7;
            alignment-y: bottom;
            padding: 0 0 1 1;
          }

        }

      }

      .message-content {
        width: 90%;
        height: fit-content;
        .component-message {
          padding: 2 3 2 2;
          border-radius: 0 5 5 5;
        }
      }

      .avatar {
        padding: 0 2 0 2;
        alignment-y: center;
        width: 10;
        height: 10;

        .timestamp {
          text-color: rgba(150, 150, 150, 100);
          left: 0;
          top: 50%;
          margin-left: 0;
          margin-bottom: 0;
          alignment-x: left;
          alignment-y: center;

          font-size: 0.5;
        }
      }

      .flex {
        width: 100%;
        height: fit-content;
        .message-header {
          space-between-entries: 0;

          .sender {
            margin-top: 1;
            font-weight: 175;
            font-size: 0.8;
          }

          .timestamp {
            text-color: rgb(150, 150, 150);
            font-size: 0.525;
          }
        }

        .message-content {
          .component-message {
            font-size: 0.8;
            background-color: rgba(170, 170, 170, 0.1);
          }
        }

      }
    }
  }
}
