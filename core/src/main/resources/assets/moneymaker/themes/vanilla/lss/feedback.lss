.container {
  left: 50%;
  top: 50%;
  width: 600;
  height: 70%;
  alignment-x: center;
  alignment-y: center;
  filter: blur(25);
  border-radius: 15;
  border-thickness: 5;
  border-color: var(--background-color-border);
  background-color: var(--background-color);

  .header {
    left: 50%;
    width: 100%;
    height: 25;
    padding: 0 2 0 2;
    space-between-entries: 5;
    background-color: rgba(255, 255, 85, 0.3);
    border-radius: 15 15 0 0;

    .title {
      alignment: center;
    }
  }

  .head-content {
    width: 100%;
    height: fit-content;
    overwrite-width: false;
    orientation: horizontal;

    .name-container {
      width: 85;
      height: fit-content;
      margin-left: 10;

      .username {
        margin-top: 5;
        margin-bottom: 5;
      }

      .name-input {
        width: 75%;
        height: 16;
        space-between-entries: 2;

        .head {
          width: 16;
          height: width;
        }

        .username-input {
          width: 100%;
          height: 16;
          text-color: yellow !important;
        }

      }

    }

    .date-container {
      width: 110;
      height: fit-content;
      margin-left: 35;

      .date {
        margin-top: 5;
        alignment-x: center;
        margin-bottom: 5;
      }

      .date-input {
        width: 100%;
        height: 16;
        alignment-x: center;
      }

    }

    .addon-version-container {
      width: 75;
      height: fit-content;
      margin-left: 40;

      .addon-version {
        margin-top: 5;
        margin-bottom: 5;
      }

      .addon-version-input {
        width: 100%;
        height: 16;
        text-color: yellow !important;
        alignment-x: center;
      }

    }

    .minecraft-version-container {
      width: 75;
      height: fit-content;
      margin-left: 30;

      .minecraft-version {
        margin-top: 5;
        margin-bottom: 5;
        alignment-x: center;
      }

      .minecraft-version-input {
        width: 100%;
        height: 16;
        alignment-x: center;
        text-color: yellow !important;
      }

    }

    .type-container {
      width: 90;
      height: fit-content;
      margin-left: 30;

      .type {
        margin-top: 5;
        margin-bottom: 5;
        alignment-x: center;
      }

      .type-dropdown {
        width: 100%;
        height: 16;
        alignment-x: center;
      }

    }

  }

  .content {
    width: 100%;
    height: 100%;
    overwrite-width: false;

    .description-container {
      width: 100%;
      height: fit-content;
      margin-left: 15;
      margin-right: 15;

      .description {
        margin-top: 10;
        margin-bottom: 5;
        alignment-x: center;
      }

      .description-input {
        width: 100%;
        height: 15;
        alignment-x: center;
      }

    }

    .attachments-container {
      width: 100%;
      height: fit-content;
      margin-left: 15;
      margin-right: 15;

      .attachments {
        margin-top: 10;
        margin-bottom: 5;
        alignment-x: center;
      }

      .attachments-input {
        width: 100%;
        height: 16;
        alignment-x: center;
      }

    }

    .availability-container {
      width: 100%;
      height: fit-content;
      margin-left: 15;
      margin-right: 16;

      .availability {
        margin-top: 10;
        margin-bottom: 5;
        alignment-x: center;
      }

      .availability-input {
        width: 100%;
        height: 16;
        alignment-x: center;
      }

    }

    .button-container {
      orientation: horizontal;
      margin-top: 10;
      width: fit-content;
      height: fit-content;
      alignment-x: center;

      .send-button {
        width: 50;
        height: 20;
        margin-right: 5;
      }

      .close-button {
        width: 50;
        height: 20;
        margin-left: 5;
      }

    }

  }
}