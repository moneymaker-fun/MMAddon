.title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 10;
}

.container {
  top: 40;
  bottom: 20;
  left: 20;
  right: 20;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";
}

.gold-container {
  top: 10;
  bottom: 10;
  left: 10;
  width: 23%;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";

  .gold-title {
    top: 5;
    alignment-x: center;
    text-color: gold;
  }

  .gold-unlock {
    top: 15;
    alignment-x: center;
    text-color: gold;
    font-size: 0.8;
  }

  .gold-scroll {
    top: 30;
    bottom: 10;
    left: 6;
    right: 6;

    .gold-list {
      width: 100%;
      height: 100%;

      Component {
        font-size: 0.8;
      }

    }

    Scrollbar {
      top: 0;
      right: 0;
      height: 100%;
      width: 5;
    }

  }

}

