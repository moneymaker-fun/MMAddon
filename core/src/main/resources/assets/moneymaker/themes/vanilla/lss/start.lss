.start-title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 10;
}

.start-container {
  top: 40;
  bottom: 20;
  left: 20;
  right: 20;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";
}

.timer-container {
  top: 20;
  bottom: 20;
  width: 30%;
  right: 20;
  box-shadow: classic left top right bottom;
}

.timer-title {
  text-color: green;
  top: 5;
  right: 11%;
}

.timer-list {
  height: 100%;
  width: 100%;
  tile-height: 20;
  tiles-per-line: 1;
  top: 10;
  left: 10;
}

Scroll {
   top: 10;
   left: 10;
   width: 90%;
   height: 90%;

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

Timer {
  top: 0;
  left: 0;
  width: 100%;
  height: 20;

  .timer-name {
    padding-top: -2;
    left: 25;
  }

  .timer-cancel {
    height: 20;
    width: 20;
  }

}

.secret-button {
  bottom:6;
  left:0;
  width: 1;
  height: 7;
  opacity:0.05;
  opacity:0.05;
  border-radius:0;
}

.break-goal-title {
