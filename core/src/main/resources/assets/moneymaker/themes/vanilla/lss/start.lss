.title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 10;
}

.start-container {
  top: 40;
  height: 50;
  left: 20;
  width: 63%;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";

  .break-goal-title {
    text-color: yellow;
    left: 15;
    top: 15;
    font-size: 0.8;
  }

  .break-goal-switch {
    left: 15;
    top: 25;
    height: 14;
    width: 30;
  }

  .break-goal-input-title {
    left: 70;
    top: 15;
    text-color: yellow;
    font-size: 0.8;
  }

  .break-goal-input {
    left: 70;
    top: 25;
    width: 60;
    height: 14;
    submit-button: true;
  }

}

.commands-container {
  top: 95;
  left: 20;
  width: 63%;
  bottom: 20;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";

  .commands-title {
    top: 10;
    left: 40%;
    text-color: green;
  }

  .command-list {
    top: 30;
    left: 5;
  }

}

.timer-container {
  top: 40;
  bottom: 20;
  width: 30%;
  right: 20;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";
}

.timer-title {
  text-color: green;
  top: 5;
  left: 50;
}

.timer-list {
  height: fit-content;
  width: 100%;
  tile-height: 20;
  tiles-per-line: 1;
  top: 10;
  left: 10;
}

Scroll {
   top: 25;
   left: 10;
   width: 90%;
   height: 90%;

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

Timer {
  top: 0;
  left: 0;
  width: 100%;
  height: 20;

  .timer-name {
    padding-top: -2;
    left: 25;
  }

  .timer-cancel {
    height: 20;
    width: 20;
  }

}

.secret-button {
  bottom:6;
  left:0;
  width: 1;
  height: 7;
  opacity:0.05;
  opacity:0.05;
  border-radius:0;
}