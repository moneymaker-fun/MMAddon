.chat-title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 10;
}

.chat-reconnect-button {
  width: fit-content;
  top: 28;
  left: 120;
  padding: 1 5 1 5;
  height: 10;
  background-color: red !important;
}

.rules-button {
  width: fit-content;
  top: 28;
  right: 20;
  padding: 1 5 1 5;
  height: 10;
  background-color: red !important;
}

.chat-status {
  font-size: 0.8;
  top: 30;
  left: 20;
}

.chat-online-text {
  font-size: 0.8;
  top: 30;
  right: 12%;
}

.chat-container {
  top: 40;
  bottom: 50;
  left: 20;
  width: 68%;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";
}

.online-container {
  top: 40;
  bottom: 50;
  width: 25%;
  right: 20;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";
}

.input-container {
  bottom: 5;
  left: 20;
  right: 20;
  height: 40;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";

  .chat-input {
    bottom: 25%;
    left: 10;
    right: 10;
    submit-button: true;
  }

  .chat-error {
    bottom: 25%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.5;
  }

  .chat-muted-title {
    bottom: 40%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.4;
  }

  .chat-muted-reason {
    bottom: 20%;
    alignment-x: center;
    text-color: dark_red;
    font-size: 1.0;
  }

}

.online-scroll {
  top: 5;
  left: 5;
  width: 90%;
  height: 95%;

  .online-list {
    height: 100%;
    width: 100%;
  }

  .online-entry {
    top: 30;
    left: 20;
    height: 15;
    width: 100%;
  }

  Scrollbar {
    left: 0;
    top: 0;
    width: 5;
    height: 100%;
    margin-right: 5;
  }
}

.chat-scroll {
  top: 10;
  left: 10;
  right: 0;
  bottom: 5;

  Scrollbar {
    left: 0;
    top: 0;
    width: 5;
    height: 100%;
    margin-right: 5;
  }

  .chat-messages {
    space-between-entries: 5;
    width: 90%;
    height: fit-content;

    ChatMessage {
      width: 90%;
      height: fit-content;
      padding-bottom: 5;

      .flex {
        top: 0;
        width: 100%;
        height: fit-content;
      }

      .message-header {
        height: 10;
        width: 100%;

        .avatar {
          padding: 0 2 0 2;
          alignment-y: center;
          width: 10;
          height: 10;
        }

        .sender {
          margin-top: 1;
          font-weight: 175;
          font-size: 0.8;
        }

        .timestamp {
          margin: 0 0 2 2;
          alignment-y: bottom;
          text-color: rgb(150, 150, 150);
          font-size: 0.525;
        }

        .message-id {
          text-color: rgb(150, 150, 150);
          font-size: 0.525;
          alignment-y: bottom;
          margin: 0 0 2 5;
        }

        .mute-button {
          height: 10;
          width: fit-content;
          padding: 0 3 1 2;
          margin: 2 0 0 5;

          .button-text {
            font-size: 0.6 !important;
            text-color: red !important;
          }

        }

        .report-button {
          height: 10;
          width: fit-content;
          padding: 0 3 1 2;
          margin: 2 0 0 5;

          .button-text {
            font-size: 0.6 !important;
            text-color: red !important;
          }

        }

        .delete-button {
          height: 10;
          width: fit-content;
          padding: 0 3 1 2;
          margin: 2 0 0 5;

          .button-icon {
            height: 7;
            alignment-y: bottom;
            padding: 0 0 1 0;
          }

        }

      }

      .message-content {
        width: 90%;
        height: fit-content;

        .component-message {
          padding: 2 3 2 2;
          font-size: 0.8;
          background-color: rgba(0, 0, 0, 0.7);
        }

      }

    }
  }
}