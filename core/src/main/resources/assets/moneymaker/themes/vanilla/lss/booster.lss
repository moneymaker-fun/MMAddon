.title {
  alignment-x: center;
  text-color: green;
  font-size: 1.5;
  top: 10;
}

.total-boost {
  left: 5;
  top: 25;
  font-size: 1;
}

.average-boosters {
  left: 5;
  top: 40;
  font-size: 0.8;
}

.container {
  top: 40;
  bottom: 20;
  left: 20;
  width: 70%;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";
}

.side-container {
  top: 40;
  bottom: 20;
  width: 22%;
  right: 20;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";
}

.booster-grid {
  left: 20;
  top: 50;
  width: 100%;
  padding-right: 10;
  height: fit-content;
  space-between-entries: 10;
  tiles-per-line: 4;
  tile-height: 70;

  Booster {
    border-radius: 5;
    border-thickness: 2;
    border-color: rgba(255, 255, 85, 0.3);

    .amount {
      left: 5;
      top: 5;
    }

    .icon {
      alignment-x: center;
      alignment-y: center;
      top: 30;
      height: 32;
      width: 32;
    }

    .boost {
      alignment-x: center;
      bottom: 5;
    }

  }

}

Scroll {
   top: 10;
   left: 10;
   right: 0;
   width: 100%;
   height: 90%;

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

.sort-button {
  width: fit-content;
  padding-left: 3;
  height: 15;
  left: 5;
  padding-right: 3;
  top: 5;
}

.clear-button {
  bottom: 5;
  left: 5;
  height: 15;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
}

.export-button {
  bottom: 25;
  left: 5;
  height: 15;
  width: fit-content;
  padding-left: 3;
  padding-right: 3;
}